<script>
(function(){
  /* Hamburger */
  var sheet=document.getElementById('menuSheet');
  var overlay=document.getElementById('sheetOverlay');
  var openBtn=document.getElementById('openMenu');
  var closeBtn=document.getElementById('closeMenu');
  function openSheet(){ sheet.classList.add('open'); sheet.setAttribute('aria-hidden','false'); overlay.classList.add('show'); document.body.style.overflow='hidden'; }
  function closeSheet(){ sheet.classList.remove('open'); sheet.setAttribute('aria-hidden','true'); overlay.classList.remove('show'); document.body.style.overflow=''; }
  if(openBtn){ openBtn.addEventListener('click', function(e){ e.preventDefault(); openSheet(); }); }
  if(closeBtn){ closeBtn.addEventListener('click', function(e){ e.preventDefault(); closeSheet(); }); }
  overlay.addEventListener('click', closeSheet);
  document.addEventListener('keydown', function(e){ if(e.key==='Escape') closeSheet(); });

  /* Avatar optional */
  var avatar=document.getElementById('avatar');
  try{ var url=localStorage.getItem('avatarUrl'); if(url){ avatar.textContent=''; avatar.style.backgroundImage="url('"+url+"')"; } }catch(e){}

  /* Live preview */
  var topic=document.getElementById('topic');
  var title=document.getElementById('title');
  var body=document.getElementById('body');
  var tags=document.getElementById('tags');
  var pvTitle=document.getElementById('pv-title');
  var pvBody=document.getElementById('pv-body');
  var pvTags=document.getElementById('pv-tags');
  function refresh(){
    var t=topic.value? '['+topic.value+'] ' : '[Topic] ';
    pvTitle.textContent = t + (title.value||'Your title will appear here');
    pvBody.textContent = body.value||'Start typing your post to see a live preview…';
    pvTags.innerHTML='';
    (tags.value||'').trim().split(/\s+/).filter(Boolean).slice(0,6).forEach(function(tag){
      var a=document.createElement('a'); a.className='chip'; a.textContent=tag.startsWith('#')?tag:'#'+tag; a.href='ThreadTalk.html#feed'; pvTags.appendChild(a);
    });
  }
  ['change','keyup','input'].forEach(function(ev){
    topic.addEventListener(ev,refresh); title.addEventListener(ev,refresh); body.addEventListener(ev,refresh); tags.addEventListener(ev,refresh);
  });
  refresh();

  /* Image previews */
  var files=document.getElementById('files');
  var thumbEls=[document.getElementById('thumb1'),document.getElementById('thumb2'),document.getElementById('thumb3')];
  var pvImg=document.getElementById('pv-img');
  files.addEventListener('change', function(){
    for(var i=0;i<thumbEls.length;i++){ thumbEls[i].style.display='none'; thumbEls[i].src=''; }
    pvImg.style.display='none'; pvImg.src='';
    var list=Array.from(files.files||[]).slice(0,3);
    list.forEach(function(f,idx){
      var url=URL.createObjectURL(f);
      thumbEls[idx].src=url; thumbEls[idx].style.display='block';
      if(idx===0){ pvImg.src=url; pvImg.style.display='block'; }
    });
  });

  /* Fake submit for now */
  document.getElementById('submitBtn').addEventListener('click', function(){
    alert('Post submitted! (Demo only — wire this up to your backend when ready.)');
    window.location.href='ThreadTalk.html#feed';
  });
})();
</script>
