<script>
(function(){
  // Hamburger
  var sheet=document.getElementById('menuSheet');
  var overlay=document.getElementById('sheetOverlay');
  var openBtn=document.getElementById('openMenu');
  var closeBtn=document.getElementById('closeMenu');
  function openSheet(){sheet.classList.add('open');overlay.classList.add('show');document.body.style.overflow='hidden';}
  function closeSheet(){sheet.classList.remove('open');overlay.classList.remove('show');document.body.style.overflow='';}
  openBtn.addEventListener('click',openSheet);
  overlay.addEventListener('click',closeSheet);
  closeBtn.addEventListener('click',closeSheet);
  document.addEventListener('keydown',function(e){if(e.key==='Escape')closeSheet();});

  // Image previews
  var input=document.getElementById('photos');
  input.addEventListener('change',function(){
    var files=Array.from(input.files||[]);
    function load(idx, idImg, idPh){
      var f=files[idx]; var img=document.getElementById(idImg); var ph=document.getElementById(idPh);
      if(!f) { img.hidden=true; ph.hidden=false; return; }
      var reader=new FileReader();
      reader.onload=function(e){ img.src=e.target.result; img.hidden=false; ph.hidden=true; };
      reader.readAsDataURL(f);
    }
    load(0,'p1','p1ph'); load(1,'p2','p2ph');
  });

  // Demo submit (no backend): store to localStorage as a stub and go back
  document.getElementById('postForm').addEventListener('submit',function(e){
    e.preventDefault();
    var topic=document.getElementById('topic').value;
    var title=document.getElementById('title').value.trim();
    if(!topic || !title){ alert('Please choose a topic and add a title.'); return; }
    try{
      var draft={topic,title,body:document.getElementById('body').value,tags:document.getElementById('tags').value,when:Date.now()};
      localStorage.setItem('threadtalk.lastDraft', JSON.stringify(draft));
    }catch(_){}
    window.location.href='ThreadTalk.html#feed';
  });
})();
</script>
