<script>
(function(){
  /* Hamburger (match behavior used across site) */
  var sheet=document.getElementById('menuSheet');
  var overlay=document.getElementById('sheetOverlay');
  var openBtn=document.getElementById('openMenu');
  var closeBtn=document.getElementById('closeMenu');

  function openSheet(){ sheet.classList.add('open'); sheet.setAttribute('aria-hidden','false'); overlay.classList.add('show'); document.body.style.overflow='hidden'; setTimeout(function(){ if(closeBtn) closeBtn.focus(); }, 50); }
  function closeSheet(){ sheet.classList.remove('open'); sheet.setAttribute('aria-hidden','true'); overlay.classList.remove('show'); document.body.style.overflow=''; if(openBtn) openBtn.focus(); }
  if(openBtn){ openBtn.addEventListener('click', function(e){ e.preventDefault(); openSheet(); }); }
  if(closeBtn){ closeBtn.addEventListener('click', function(e){ e.preventDefault(); closeSheet(); }); }
  overlay.addEventListener('click', closeSheet);
  document.addEventListener('keydown', function(e){ if(e.key==='Escape') closeSheet(); });

  /* Optional avatar image */
  var avatar=document.getElementById('avatar');
  try{ var url=localStorage.getItem('avatarUrl'); if(url){ avatar.textContent=''; avatar.style.backgroundImage="url('"+url+"')"; } }catch(e){}

  /* Tailoring mini-forum logic */
  var KEY='tt:tailoring';
  var cardsEl=document.getElementById('cards');
  var titleEl=document.getElementById('titleInput');
  var bodyEl=document.getElementById('bodyInput');
  var postBtn=document.getElementById('postBtn');
  var photoInput=document.getElementById('photoInput');
  var videoInput=document.getElementById('videoInput');
  var fileName=document.getElementById('fileName');
  var imgPreview=document.getElementById('imgPreview');
  var pendingMedia = { imgURL: '', vidName: '' };

  function initials(name){ if(!name) return 'YY'; var p=name.trim().split(/\s+/); var a=(p[0]||'')[0]||''; var b=(p[1]||'')[0]||''; return (a+b||a||'Y').toUpperCase(); }

  function renderCard(item, prepend){
    var el=document.createElement('article');
    el.className='card';
    var user = item.user || 'You';
    var init = item.init || initials(user);
    var cat = 'Tailoring';
    var mediaHTML = '';
    if(item.imgURL){ mediaHTML += '<img class="post-img" src="'+item.imgURL+'" alt="post image"/>'; }
    // (Video preview omitted in static build; we still show filename if present)
    var titleText = item.title ? (' '+item.title) : '';
    el.innerHTML =
      '<div class="meta"><div class="avatar">'+init+'</div><span>'+user+'</span> ‚Ä¢ <span>just now</span></div>'+
      '<div class="title"><a class="cat" href="ThreadTalk-Tailoring.html">['+cat+']</a>'+titleText+'</div>'+
      mediaHTML+
      (item.body ? '<div class="preview">'+item.body+'</div>' : '')+
      '<div class="actions"><span>‚ù§ '+(Math.floor(Math.random()*10)+1)+'</span><span>üí¨ '+(Math.floor(Math.random()*5))+'</span></div>';
    if(prepend && cardsEl.firstChild){ cardsEl.insertBefore(el, cardsEl.firstChild); }
    else { cardsEl.appendChild(el); }
  }

  function loadStored(){
    try{
      var raw=localStorage.getItem(KEY);
      if(!raw) return;
      var arr=JSON.parse(raw); if(!Array.isArray(arr)) return;
      arr.sort(function(a,b){ return (b.ts||0)-(a.ts||0); });
      arr.forEach(function(it){ renderCard(it, false); });
    }catch(e){}
  }

  /* Media pickers */
  photoInput.addEventListener('change', function(){
    if(this.files && this.files[0]){
      var f=this.files[0];
      fileName.textContent = 'üì∑ ' + f.name;
      var url = URL.createObjectURL(f);
      pendingMedia.imgURL = url;
      imgPreview.src = url; imgPreview.style.display='block';
    } else {
      fileName.textContent=''; pendingMedia.imgURL=''; imgPreview.style.display='none';
    }
  });
  videoInput.addEventListener('change', function(){
    if(this.files && this.files[0]){
      var f=this.files[0];
      fileName.textContent = 'üé¨ ' + f.name + (pendingMedia.imgURL ? ' + photo' : '');
      pendingMedia.vidName = f.name;
    } else {
      if(!pendingMedia.imgURL){ fileName.textContent=''; }
      pendingMedia.vidName = '';
    }
  });

  /* Post action ‚Äî render first, then try to persist */
  postBtn.addEventListener('click', function(){
    var title = (titleEl.value||'').trim();
    var body  = (bodyEl.value||'').trim();
    if(!title && !body){ alert('Add a title or some text.'); return; }

    var item = {
      cat:'Tailoring', title:title, body:body,
      imgURL: pendingMedia.imgURL || '',
      vidName: pendingMedia.vidName || '',
      user:'You', init:'YY', ts: Date.now()
    };

    // Render immediately
    renderCard(item, true);

    // Try to persist (image ObjectURL won‚Äôt survive reload; that‚Äôs fine for now)
    try{
      var raw=localStorage.getItem(KEY);
      var arr=raw ? JSON.parse(raw) : [];
      if(!Array.isArray(arr)) arr=[];
      // Store without imgURL/vidName to avoid broken URLs after reload; keep text history
      arr.unshift({cat:item.cat, title:item.title, body:item.body, ts:item.ts, user:item.user, init:item.init});
      localStorage.setItem(KEY, JSON.stringify(arr));
    }catch(e){ /* ignore storage errors */ }

    // Reset composer (keep breadcrumb and preview clean)
    titleEl.value=''; bodyEl.value='';
    if(pendingMedia.imgURL){ URL.revokeObjectURL(pendingMedia.imgURL); }
    pendingMedia={ imgURL:'', vidName:'' };
    imgPreview.style.display='none'; imgPreview.src='';
    fileName.textContent='';
  });

  // Initial load
  loadStored();
})();
</script>
</body>
</html>
